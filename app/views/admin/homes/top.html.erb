<div class="container">
 <div class="row">
  <div class="col m-3">
    <h4>会員一覧</h4><br>
    <table class="table">
      <thead>
        <tr>
          <th scope="col">会員ID</th>
          <th scope="col">名前</th>
          <th scope="col">メールアドレス</th>
          <th scope="col">ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
        <tr>
          <th scope="low"><%= user.id %></th>
          <th scope="low"><%= link_to user.name, admin_user_path(user) %></th>
          <th scope="low"><%= user.email %></th>
    	     <% if user.is_deleted? == true %>
    	       <td class="text-danger text-center">退会</td>
				   <% else %>
				     <td class="text-success text-center">有効</td>
				   <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
 </div>
 <div class="d-flex pagenation justify-content-center mt-5 mb-3">
   <%= paginate @users %>
 </div>
</div>