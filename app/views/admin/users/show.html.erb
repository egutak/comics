<div class="container">
  <div class="row">
    <div class="col m-3">
      <h4><%= @user.name %>さんの会員詳細</h4>
      <table class="table table-borderless">
        <tbody>
          <tr>
            <th>会員ID</th>
            <td><%= @user.id %></td>
          </tr>
          <tr>
            <th>名前</th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th>会員ステータス</th>
            <% if @user.is_deleted? == true %>
    	        <td class="text-danger">退会</td>
				    <% else %>
				      <td class="text-success">有効</td>
				    <% end %>
          </tr>
          <tr>
            <th>投稿</th>
            <% @user.books.each do |book| %>
            <td><%= book.title %></td>
            <% end %>
          </tr>
        </tbody>
      </table>
      <div class="text-center mb-3">
      <div class="d-inline-block mr-5">
        <%= link_to '編集する', edit_admin_user_path, class:"btn btn-success" %>
      </div>
      <div class="d-inline-block ml-5">
        <%= link_to '会員一覧に戻る',admin_path, class:"btn btn-primary" %>
      </div>
      </div>
    </div>
  </div>
</div>