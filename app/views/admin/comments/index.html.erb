<div class="container">
    <div class="row">
       <div class="col-3">
      </div>
        <div class="col-8">
          <h4>投稿一覧</h4>
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                <th scope="col">ユーザーID</th>
                <th scope="col">ユーザーネーム</th>
                <th scope="col">投稿ID</th>
                <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
               <% @comments.each do |book| %>
               <tr>
                 <td><%= link_to book.user_id, admin_comments_path %></td>
                 <td><%= book.user.name %></td>
                 <td><%= book.book_id %></td>
               </tr>
               <% end %>
               <div class="d-flex pagenation justify-content-center mt-5 mb-3">
                <%= paginate @comments %>
               </div>
              </tbody>
           </table>
        </div>
    </div>
</div>