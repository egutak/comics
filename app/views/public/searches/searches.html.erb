<div class="container">
  <div class="row">
    <% @books.each do |book| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card">
          <div class="card-body">
            <h5 class="card-title">
              <%= link_to book.title, public_book_path(book) %>
            </h5>
            <div class="card-text">
              <%= simple_format(book.body) %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>