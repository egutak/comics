<div class="container">
    <div class="row">
       <div class="col-3">
      </div>
        <div class="col-8">
          <h4>投稿一覧</h4>
            <table class='table table-hover table-inverse'>
              <thead>
                <tr>
                <th></th>
                <th>タイトル</th>
                <th>感想</th>
                <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
               <% @books.each do |book| %>
               <tr>
                 <td><%= book.user.name %></td>
                 <td><%= link_to book.title, public_book_path(book) %></td>
                 <td><%= book.body %></td>
                 <td><%= link_to "#{book.comments.count} コメント", public_book_path(book.id) %></td>
               </tr>
               <% end %>
               <div class="d-flex pagenation justify-content-center mt-5 mb-3">
                <%= paginate @books %>
               </div>
              </tbody>
           </table>
        </div>
    </div>
</div>