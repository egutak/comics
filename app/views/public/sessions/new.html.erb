<h4>ログイン</h4>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<table class="table table-borderless">
       <tbody>

        <tr>
         <div class="field">
          <th scope="col">メールアドレス</th>
          <td colspan="3">
            <%= f.email_field :email, size: 78, autofocus: true, autocomplete: "email" %>
          </td>
         </div>
        </tr>

        <tr>
         <div class="field">
          <th scope="col">パスワード</th>
          <td>
            <% if @minimum_password_length %>
            <% end %><br />
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
         </div>
        </tr>

       <tr>
        <td></td>
        <td>
          <div class="actions">
            <%= f.submit "ログイン", class: "btn btn-success" %>
          </div>
        </td>
       </tr>
      </tbody>
     </table>
    <% end %>

     <h4>会員登録がお済みでない方</h4>
     <p class="login-link-text"><%= link_to "こちら", new_user_registration_path, class: "kotira" %>からログインしてください。</p>

     <%= link_to 'ゲストログイン（閲覧用）', users_guest_sign_in_path, method: :post %>

    </div>
  </div>
</div>